<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/desert</item>
        <item name="colorPrimaryDark">@color/desert_dark</item>
        <item name="colorAccent">@color/desert_light</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/desert_dark</item>
    </style>

    <style name="MainActivityText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="MainActivityCards" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MainActivityCardsTextBottom">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="MainActivityCardsTextCenter">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="CalculateActivityCards" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="CalculateActivityCardsContent">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="CalculateActivityCardsResultText">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="CalculateActivityLabelText">
        <item name="android:paddingLeft">4dp</item>
    </style>
    <style name="CalculateActivityResultText">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>




</resources>
